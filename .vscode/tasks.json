{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-vite-server",
      "type": "npm",
      "script": "dev",
      "path": "front-end/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "ready in .*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/front-end"
      }
    }
  ]
}